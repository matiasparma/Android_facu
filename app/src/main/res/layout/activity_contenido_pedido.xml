<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/autopartes_inicio"
    android:backgroundTint="#EEE7F8"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewPedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Pedidos"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/layoutListaPedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Aquí se mostrarán dinámicamente los elementos de la lista -->
        </LinearLayout>

    </ScrollView>
</LinearLayout>

